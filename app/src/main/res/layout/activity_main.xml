<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="85dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
            android:orientation="vertical">

    <TextView
        android:id="@+id/tvacreditads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="ACREDiTADS\nBIENVENIDO/A"
        android:fontFamily="sans-serif-black"
        android:textSize="44sp"
      />

    <Button
        android:id="@+id/btnAgenda"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="AGENDA"
        android:paddingHorizontal="75dp"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnRegistro"
        android:layout_width="332dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="REGISTRO"
        android:paddingHorizontal="75dp"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnAcreditacion"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="ACREDITACIÓN"
        android:paddingHorizontal="75dp"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnMiActividad"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="MI ACTIVIDAD"
        android:paddingHorizontal="75dp"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnAdministracion"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="ADMINISTRACIÓN"
        android:paddingHorizontal="75dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="semana.academica.if.livramento@gmail.com"
        android:textSize="20sp"
        />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>