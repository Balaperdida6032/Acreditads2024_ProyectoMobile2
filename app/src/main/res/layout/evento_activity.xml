<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    tools:context=".Evento_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="85dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">
    <TextView
        android:id="@+id/tviewEventos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="REGISTRO DE EVENTOS"
        android:textSize="34sp"
        android:fontFamily="sans-serif-black" />

    <EditText
        android:id="@+id/edtTituloEvento"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="TÃ­tulo del evento"
        android:gravity="center"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/edtAutorEvento"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Autor del evento"
        android:gravity="center"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/edtTipoEvento"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Conferencia1/taller2/curso3"
        android:inputType="number"
        android:gravity="center"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/edtFechaHoraEvento"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="YYYY-MM-DD-HH-MM-SS"
        android:gravity="center"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/edtIdAdminEvento"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Id administrador del evento"
        android:inputType="number"
        android:gravity="center"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnAgregarMapa"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="UBICAR"
        android:paddingHorizontal="75dp"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="AGREGAR"
        android:paddingHorizontal="75dp"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="VOLVER"
        android:paddingHorizontal="75dp"
        android:textSize="25dp" />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>